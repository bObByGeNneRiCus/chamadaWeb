@model IEnumerable<ChamadaWeb.Models.Pessoa>

@{
    ViewBag.Title = "Listagem de Pessoas";
}

<div class="modal fade" id="modalPessoa">
    <div class="modal-dialog modal-lg" style=" width: 900px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Listagem de Alunos</h2>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <form id="selecionarPessoaForm">
                <div class="modal-body">
                    <div class="card mb-3">
                        <div class="card-header text-white bg-dark">
                            <i class="fas fa-table"></i>
                            Alunos
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-bordered table-hover" id="tableListagemPessoas" width="100%" cellspacing="0">
                                    <thead class="thead-light">
                                        <tr class="bg-primary">
                                            <th>
                                                Id
                                            </th>
                                            <th>
                                                Nome
                                            </th>
                                            <th>
                                                RG
                                            </th>
                                            <th>
                                                Selecionar
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="tableListagemPessoasBody" style="border:none"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Incluir" class="btn btn-outline-success" onclick="incluirAluno();" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>