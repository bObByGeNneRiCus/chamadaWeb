@model ChamadaWeb.Models.Turma

@{
    ViewBag.Title = "Excluir Turma";
}

<div class="container">
    <h2>Excluir Turma</h2>

    <h3 class="text-danger">Tem certeza que deseja excluir este registro?</h3>
    <div>
        <h4>Turma</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Id
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt>
                Nome
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                Data In&iacute;cio
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataInicio)
            </dd>

            <dt>
               Data Fim
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataFim)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataAlteracao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataAlteracao)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Excluir" class="btn btn-default" /> |
                @Html.ActionLink("Voltar", "Index")
            </div>
        }
    </div>
</div>